{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/api/agents",
      "dest": "/api/agents.py"
    },
    {
      "src": "/api/chat",
      "dest": "/api/chat.py"
    },
    {
      "src": "/api/trail/([^/]+)",
      "dest": "/api/trail/[trailId].py?trailId=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ],
  "functions": {
    "api/health.py": {
      "runtime": "python3.11"
    },
    "api/agents.py": {
      "runtime": "python3.11"
    },
    "api/chat.py": {
      "runtime": "python3.11"
    },
    "api/trail/[trailId].py": {
      "runtime": "python3.11"
    }
  },
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "OPENAI_MODEL": "gpt-4",
    "CORS_ORIGINS": "https://*.vercel.app,https://localhost:3000",
    "LOG_LEVEL": "INFO"
  },
  "buildCommand": "cd client && npm install && npm run build"
}